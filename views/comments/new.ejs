<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Purchase <%= tech.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/techs/<%= tech._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="address">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="comment[quan]" placeholder="quantity">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/techs">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>
