
<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= tech.name %></h1>
        <h5 style="text-align: center">Delete: set the quantity as 0</h5>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/techs/<%= tech._id %>?_method=PUT" enctype="multipart/form-data"  method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" value="<%= tech.name %>" placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" value="<%= tech.price %>" min="0.01" step="0.01" placeholder="price">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="quantity" value="<%= tech.quantity %>" min="0" step="1" placeholder="quantity(set as 0 to delete it)">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" value="<%= tech.image %>" placeholder="image url">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" value="<%= tech.description %>" placeholder="description">
                </div>
                <p>Update Tech Product Picture: <input type="file" name="userFile" /></p>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/techs">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>
